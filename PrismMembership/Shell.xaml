        xmlns:prism="http://www.codeplex.com/CompositeWPF"
        Title="Shell" Height="300" Width="300">
    <Grid>
        <ItemsControl Grid.Column="0" prism:RegionManager.RegionName="MembershipRegion" Name="UserRegion" Background="Transparent" Margin="0,0,0.333,9.667">
